<%= form_for([@article, @article.comments.build], remote: true) do |f| %>
  <div class="mv2">
    <%= f.label :commenter %> <br>
    <%= f.text_field :commenter, required: "required" %>
  </div>
  <div class="mv2">
    <%= f.label :body %> <br>
    <%= f.text_area :body, size: "32x6", required: "required" %>
  </div>
  <div class="mv2">
    <%= f.submit 'Add this comment' %>
  </div>
<% end %>
