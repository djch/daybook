<%= form_for([@article, @article.comments.build], remote: true) do |f| %>
  <div class="mv2">
    <%= f.label :commenter %>
    <%= f.text_field :commenter, class: "form-input", required: "required" %>
  </div>
  <div class="mv2">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-input", size: "32x6", required: "required" %>
  </div>
  <div class="mv2">
    <%= f.submit 'Add this comment' %>
  </div>
<% end %>
