<header class="mv2 tc">
  ← <%= link_to 'Back to home', root_path %>
  <h1>Articles</h1>
</header>

<div class="mv3 tc">
  <%= button_to 'Post an article', new_article_path, method: :get, class: "btn btn-primary" %>
</div>

<% @articles.each do |article| %>
  <h2 class="mb2"><%= article.title %></h2>
  <div class="gray">
    Published on <%= local_date(article.created_at) %>
  </div>
  <div class="trix-content mv3">
    <%= truncate(article.text, length: 960, separator: '. ', escape: false)%>
  </div>
  <p class="mb4">
    <%= link_to 'Continued…', article_path(article), class: "i" %>
  </p>
<% end %>
